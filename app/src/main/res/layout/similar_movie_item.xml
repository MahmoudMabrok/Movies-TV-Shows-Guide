<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="MovieItem"
            type="com.test.ahmedorabi.movieapp.model.appModels.similar.Result"/>

        <variable
            name="callBack"
            type="com.test.ahmedorabi.movieapp.view.callback.SimilarMovieCallback"/>

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_item"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{() -> callBack.onClickSimilarMovie(MovieItem)}"
        android:foreground="@drawable/ripple"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/file_image"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@null"
                app:posterImage="@{MovieItem.mPosterPath}"
                android:contentDescription="@string/movie_item_image"
                android:scaleType="center" />

            <RatingBar
                android:id="@+id/ratingbar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:voteAverage="@{MovieItem.mVoteAverage}"
                android:layout_marginTop="5dp"
                android:numStars="5" />

            <TextView
                android:id="@+id/title_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{MovieItem.title}"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/white" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</layout>

